<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
          
<hibernate-mapping package="bupt.zssdhl.SSHFrame.Bean">
	<class name="UserInfo" table="UserInfo" lazy="false">
		<id name="id" column="id" type="java.lang.Integer">
			<generator class="native"></generator>	
		</id>
		
		<property name="username" type="java.lang.String">
			<column name="username" length="64"></column>
		</property>
		
		<property name="realname" type="java.lang.String">
			<column name="realname" length="64"></column>
		</property>
		
		<property name="pwd" type="java.lang.String">
			<column name="pwd" length="64"></column>
		</property>
		
		<property name="grade" type="java.lang.Integer">
			<column name="grade" length="32"></column>
		</property>
		
		<property name="invitaCode" type="java.lang.String">
			<column name="invitaCode" length="64"></column>
		</property>
	
	 
		<set name="fileInfos" cascade="all">
			<key column="UserInfo_id"></key>
			<one-to-many class="FileInfo"/>
		</set>
	
	</class>

</hibernate-mapping>